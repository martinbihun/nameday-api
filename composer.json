{
  "name": "xnekv03/nameday-api",
  "description": "Nameday API library for https://api.abalin.net",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Vojta Nekvapil",
      "homepage": "https://api.abalin.net",
      "email": "fby@post.cz"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": ">=7.1",
    "ext-json": "*",
    "nesbot/carbon": "^2.23",
    "guzzlehttp/guzzle": "^6.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.3",
    "phpstan/phpstan": "^0.11",
    "squizlabs/php_codesniffer": "3.*"
  },
  "autoload": {
    "psr-4": {
      "Nameday\\": "src/Nameday/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Nameday\\": "tests/Nameday/"
    }
  },
  "scripts": {
    "build": [
      "@composer install --no-progress --no-interaction --no-suggest --no-scripts",
      "@phpcs",
      "@phpunit"
    ],
    "phpunit": "vendor/bin/phpunit tests/ -v",
    "phpcs": "phpcs --colors -v --standard=PSR2 src tests",
    "phpstan": "phpstan analyse -v --level max src tests"
  }
}
